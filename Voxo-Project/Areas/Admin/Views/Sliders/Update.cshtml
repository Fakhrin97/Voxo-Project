@model SliderUpdateVM
<div class="page-body">
    <div class="title-header">
        <h5>Update Slider</h5>
    </div>
    <!-- New Product Add Start -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-header-2">
                                    <h5>Brands Information</h5>
                                </div>
                                <form class="theme-form theme-form-2 mega-form"
                                      method="post" asp-action="Update" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="row">
                                        <div class="mb-4 row align-items-center">
                                            <label asp-for="Name" class="form-label-title col-sm-2 mb-0">
                                                Product
                                                Name
                                            </label>
                                            <div class="col-sm-10">
                                                <input class="form-control" asp-for="Name"
                                                       placeholder="Product Name">
                                            </div>
                                        </div>
                                        <div class="mb-4 row align-items-center">
                                            <label asp-for="Title" class="form-label-title col-sm-2 mb-0">
                                                Product
                                                Title
                                            </label>
                                            <div class="col-sm-10">
                                                <input class="form-control" asp-for="Title"
                                                       placeholder="Product Title">
                                            </div>
                                        </div>
                                        <div class="mb-4 row align-items-center">
                                            <label asp-for="Price" class="form-label-title col-sm-2 mb-0">
                                                Product
                                                Price
                                            </label>
                                            <div class="col-sm-10">
                                                <input class="form-control" asp-for="Price"
                                                       placeholder="Product Price">
                                            </div>
                                        </div>
                                        <div class="mb-4 row align-items-center">
                                            <label asp-for="DiscountDegree" class="form-label-title col-sm-2 mb-0">
                                                Product
                                                DiscountDegree
                                            </label>
                                            <div class="col-sm-10">
                                                <input class="form-control" asp-for="DiscountDegree"
                                                       placeholder="Product Discount Degree">
                                            </div>
                                           
                                        </div>
                                        <img style="width:250px" src="~/assets/images/voxo-slider/@Model.BackGroundImage" class="img-fluid"
                                             alt="photo">
                                        <div class="row">
                                            <div class="mb-4 row align-items-center">
                                                <label class="col-sm-2 col-form-label form-label-title" asp-for="BGImage">Back Gorund Image</label>
                                                <div class="col-sm-10">
                                                    <input class="form-control form-choose" asp-for="BGImage"
                                                           id="formFileMultiple" accept="image/*">
                                                </div>
                                                <span asp-validation-for="BGImage" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <img style="width:250px" src="~/assets/images/voxo-slider/@Model.CornerImage" class="img-fluid"
                                             alt="photo">
                                        <div class="row">
                                            <div class="mb-4 row align-items-center">
                                                <label class="col-sm-2 col-form-label form-label-title" asp-for="CImage">Corner Image</label>
                                                <div class="col-sm-10">
                                                    <input class="form-control form-choose" asp-for="CImage"
                                                           id="formFileMultiple" accept="image/*">
                                                </div>
                                                <span asp-validation-for="CImage" class="text-danger"></span>
                                            </div>
                                        </div>
                                        @foreach (var item in Model.SliderImages)
                                        {
                                            <img style="width:250px" src="~/assets/images/voxo-slider/@item.ImageUrl" class="img-fluid"
                                                 alt="photo">
                                        }
                                        <div class="row">
                                            <div class="mb-4 row align-items-center">
                                                <label class="col-sm-2 col-form-label form-label-title" asp-for="SImages">Images</label>
                                                <div class="col-sm-10">
                                                    <input class="form-control form-choose" asp-for="SImages"
                                                           id="formFileMultiple" accept="image/*">
                                                </div>
                                                <span asp-validation-for="SImages" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-4 row align-items-center">
                                            <label class="form-label-title col-lg-2 col-md-3 mb-0">Status</label>
                                            <div class="col-md-9">
                                                <div class="form-check user-checkbox ps-0">
                                                    <input class="checkbox_animated check-it"
                                                           asp-for="Published" id="flexCheckDefault">
                                                    <label class="form-label-title col-md-2 mb-0">
                                                        Is Deleted
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mb-4 row align-items-center">
                                            <label class="form-label-title col-lg-2 col-md-3 mb-0">Free Deliver</label>
                                            <div class="col-md-9">
                                                <div class="form-check user-checkbox ps-0">
                                                    <input class="checkbox_animated check-it"
                                                           asp-for="FreeDeliver" id="flexCheckDefault">                                                    
                                                </div>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                                        <button class="btn btn-light" asp-action="Index">Cancel</button>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- New Product Add End -->
    <!-- footer Start -->
    <div class="container-fluid">
        <footer class="footer">
            <div class="row">
                <div class="col-md-12 footer-copyright text-center">
                    <p class="mb-0">Copyright 2021 © Voxo theme by pixelstrap</p>
                </div>
            </div>
        </footer>
    </div>
    <!-- footer En -->
</div>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js" integrity="sha512-rstIgDs0xPgmG6RX1Aba4KV5cWJbAMcvRCVmglpam9SoHZiUCyQVDdH2LPlxoHtrv17XWblE/V/PP+Tr04hbtA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js" integrity="sha512-xq+Vm8jC94ynOikewaQXMEkJIOBp7iArs3IhFWSWdRT3Pq8wFz46p+ZDFAR7kHnSFf+zUv52B3prRYnbDRdgog==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}
