@model List<UserVM>
<div class="page-body">
    <div class="title-header title-header-1">
        <h5>All Users</h5>
        <form class="d-inline-flex">
            <a asp-action="Create" class="align-items-center btn btn-theme">
                <i data-feather="plus-square"></i>Add New
            </a>
        </form>
    </div>
    <!-- All User Table Start -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div>
                            <div class="table-responsive table-desi">
                                <table class="user-table table table-striped">
                                    <thead>
                                        <tr>

                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Role</th>
                                            <th>Last Login</th>
                                            <th>Confirmed</th>
                                            <th>Options</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>

                                                <td>
                                                    <a href="javascript:void(0)">
                                                       
                                                        <span>@item.Lastname @item.Firstname</span>
                                                    </a>
                                                </td>
                                                

                                                <td>@item.Email</td>

                                                <td class="font-primary">@item.Role</td>

                                                <td>@item.LastLogin.ToString("d")</td>
                                                @if (item.EmailConfirmed)
                                                {
                                                    <td class="td-check">
                                                        <span class="lnr lnr-checkmark-circle"></span>
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td class="td-cross">
                                                        <span class="lnr lnr-cross-circle"></span>
                                                    </td>
                                                }

                                                <td>
                                                    <ul>


                                                        <li>
                                                            <a asp-action="Update" asp-route-id="@item.Id">
                                                                <span class="lnr lnr-pencil"></span>
                                                            </a>
                                                        </li>

                                                        <li>
                                                            <form class="forms-sample" method="post" asp-action="Delete" asp-route-id="@item.Id">
                                                                <button type="submit" class="btn btn-danger mr-2"><i class="far fa-trash-alt theme-color"></i></button>
                                                            </form>
                                                        </li>
                                                    </ul>
                                                </td>
                                            </tr>

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="pagination-box">
                        <nav class="ms-auto me-auto " aria-label="...">
                            <ul class="pagination pagination-primary">
                                <li class="page-item disabled">
                                    <a class="page-link" href="javascript:void(0)">Previous</a>
                                </li>
                                <li class="page-item active">
                                    <a class="page-link" href="javascript:void(0)">1 </a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="javascript:void(0)">2</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="javascript:void(0)">3</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="javascript:void(0)">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- All User Table Ends-->

    <div class="container-fluid">
        <!-- footer start-->
        <footer class="footer">
            <div class="row">
                <div class="col-md-12 footer-copyright text-center">
                    <p class="mb-0">Copyright 2021 © Voxo theme by pixelstrap</p>
                </div>
            </div>
        </footer>
        <!-- footer end-->
    </div>
</div>